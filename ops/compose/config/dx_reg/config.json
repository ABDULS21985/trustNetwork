{
  "api": {
    "hostname": "dx_reg",
    "address": "0.0.0.0",
    "port": 3002,
    "publicURL": "https://dx_reg:3002",
    "basePath": "/api/v1"
  },
  "tls": {
    "enabled": true,
    "certFile": "/config/cert.pem",
    "keyFile": "/config/key.pem",
    "caFile": "/config/ca.pem",
    "requireClientCert": false
  },
  "p2p": {
    "enabled": true,
    "hostname": "dx_reg",
    "address": "0.0.0.0",
    "port": 41001,
    "advertise": { "host": "dx_reg", "port": 41001 }
  },
  "storage": {
    "type": "filesystem",
    "filesystem": { "path": "/data/files" }
  },
  "log": { "level": "debug" },
  "destinations": [ "/config/destinations/data.json" ],
  "peers": [ "/config/peers/data.json" ]
